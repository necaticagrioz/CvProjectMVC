@using CvProjectMVC.Models.Entity
@model List<TblSertifika>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div>
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">

                                <div class="timeline timeline-inverse">

                                    <div>
                                        @foreach (var item in Model)
                                        {

                                            <i class="fas fa-medal bg-primary"></i>

                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                    <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success btn-sm">İncele</a>

                                                </div>
                                            </div>
                                        }
                                    </div>

                                </div>
                                <a href="/Sertifika/YeniSertifika/" class="btn btn-info">Yeni Sertifika</a>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>


    </section>
</body>
</html>
